<h2>Available drones</h2>
<div class="grid-container">
    {{#each drones}}
    <div class="drone-wrapper">
        <p>Drone name: {{name}}</p>
        <p>Number of propellers: {{propellers}}</p>
        <p>Max speed: {{maxSpeed}}mph</p>
        <div class="actions">
            <a href="/drones/{{_id}}/edit">Edit drone</a>
            <form action="/drones/{{_id}}/delete" method="post">
                <button>Destroy drone</button>
            </form>
        </div>
    </div>
    {{/each}}
</div>